# Activar mod_rewrite
RewriteEngine On

# Forzar UTF-8
AddDefaultCharset UTF-8

# Permitir acceso a im√°genes
<IfModule mod_alias.c>
    # Solo necesario si hay conflictos, opcional
    Alias /imagenes_bicicletas /var/www/html/imagenes_bicicletas
</IfModule>

<Directory "/var/www/html/imagenes_bicicletas">
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
</Directory>

# Opcional: redirigir URLs amigables a index.php (si usas rutas tipo /api/login)
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule ^ index.php [QSA,L]

# Priorizar index.php e index.html como archivos por defecto
DirectoryIndex index.php index.html

# Mostrar errores (solo para desarrollo)
php_flag display_errors on
php_value error_reporting 32767
