# Activar motor de reescritura
RewriteEngine On

# Redirigir todas las rutas a index.php si no son archivos o carpetas
# (descomenta si usas rutas tipo /api/login en lugar de login.php)
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule ^ index.php [QSA,L]

# Forzar codificaci√≥n UTF-8
AddDefaultCharset UTF-8

# Mostrar errores (solo en desarrollo)
php_flag display_errors on
php_value error_reporting 32767

# Priorizar index.php como archivo de inicio
DirectoryIndex index.php index.html
