# Definir los archivos índice que Apache debe buscar
DirectoryIndex index.php index.html

# Activar mod_rewrite para URLs amigables (si está habilitado en el servidor)
RewriteEngine On

# Opcional: redirigir todo a index.php (descomenta si usas rutas tipo /api/registrar)
# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule ^ index.php [QSA,L]

# Forzar codificación UTF-8
AddDefaultCharset UTF-8

# Mostrar errores (solo para desarrollo, quitar en producción)
php_flag display_errors on
php_value error_reporting 32767
